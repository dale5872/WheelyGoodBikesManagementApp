<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane styleClass="main-background" stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="App.FXControllers.EditEquipmentController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox spacing="10.0">
                    <children>
                  <Label fx:id="equipmentInfo" text="&lt;equipmentInfo&gt;" textFill="WHITE">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                        <Label fx:id="allFieldsWarning" layoutX="14.0" layoutY="14.0" text="All fields are required" textFill="WHITE">
                            <font>
                                <Font size="14.0" />
                            </font>
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </Label>
                        <VBox>
                            <children>
                                <Label text="Location" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <ComboBox fx:id="equipmentLocation" minHeight="-Infinity" prefHeight="30.0" prefWidth="300.0" promptText="Select..." style="-fx-font-size: 14px;">
                                    <VBox.margin>
                                        <Insets />
                                    </VBox.margin>
                                </ComboBox>
                            </children>
                        </VBox>
                        <VBox>
                            <children>
                                <Label text="Status" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <ComboBox fx:id="statusCombo" minHeight="-Infinity" prefHeight="30.0" prefWidth="300.0" promptText="Select..." style="-fx-font-size: 14px;" />
                            </children>
                        </VBox>
                    </children>
                </VBox>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#confirm" prefWidth="100.0" styleClass="green-button" text="Update" textOverrun="CLIP" />
                        <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#close" prefWidth="100.0" styleClass="green-button" text="Cancel" textOverrun="CLIP" />
                    </children>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</AnchorPane>
