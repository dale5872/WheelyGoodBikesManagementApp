<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefWidth="400.0" styleClass="main-background" stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="App.FXControllers.AddEditAccountController">
   <children>
         <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
             <children>
                 <TextField fx:id="username" layoutX="14.0" layoutY="39.0" prefHeight="25.0" promptText="Username...">
                     <font>
                         <Font size="14.0" />
                     </font>
                     <VBox.margin>
                         <Insets />
                     </VBox.margin>
                 </TextField>
                 <HBox alignment="CENTER" spacing="10.0">
                     <children>
                         <TextField fx:id="firstName" prefHeight="25.0" promptText="First Name...." HBox.hgrow="SOMETIMES">
                             <font>
                                 <Font size="14.0" />
                             </font>
                             <HBox.margin>
                                 <Insets />
                             </HBox.margin>
                         </TextField>
                         <TextField fx:id="lastName" prefHeight="25.0" promptText="Surname..." HBox.hgrow="ALWAYS">
                             <font>
                                 <Font size="14.0" />
                             </font>
                         </TextField>
                     </children>
                     <VBox.margin>
                         <Insets />
                     </VBox.margin>
                 </HBox>
                 <TextField fx:id="email" prefHeight="25.0" promptText="Email...">
                     <font>
                         <Font size="14.0" />
                     </font>
                     <VBox.margin>
                         <Insets />
                     </VBox.margin>
                 </TextField>
                 <TextField fx:id="phoneNumber" prefHeight="25.0" promptText="Phone Number...">
                     <font>
                         <Font size="14.0" />
                     </font>
                     <VBox.margin>
                         <Insets />
                     </VBox.margin>
                 </TextField>
                 <HBox alignment="CENTER" minHeight="-Infinity" prefHeight="30.0" prefWidth="400.0" spacing="10.0" style="-fx-font-size: 14px;">
                     <children>
                         <ComboBox fx:id="accountType" onAction="#changeAccountType" prefHeight="30.0" prefWidth="200.0" promptText="Account type..." HBox.hgrow="ALWAYS">
                             <HBox.margin>
                                 <Insets />
                             </HBox.margin>
                         </ComboBox>
                         <ComboBox fx:id="workLocation" prefHeight="30.0" prefWidth="200.0" promptText="Location..." HBox.hgrow="ALWAYS">
                             <HBox.margin>
                                 <Insets />
                             </HBox.margin>
                         </ComboBox>
                     </children>
                     <VBox.margin>
                         <Insets />
                     </VBox.margin>
                 </HBox>
            <VBox spacing="10.0">
               <children>
                       <PasswordField fx:id="password" prefHeight="25.0" promptText="Password...">
                          <font>
                              <Font size="14.0" />
                          </font>
                       </PasswordField>
                  <PasswordField fx:id="reenterPassword" prefHeight="25.0" promptText="Re-Enter Password...">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </PasswordField>
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </VBox>
                 <HBox alignment="CENTER_RIGHT" spacing="10.0">
                     <children>
                         <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#confirm" prefWidth="100.0" styleClass="green-button" text="Add" textOverrun="CLIP" />
                  <Button mnemonicParsing="false" onAction="#cancel" prefWidth="100.0" styleClass="green-button" text="Cancel" textOverrun="CLIP" />
                     </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
                 </HBox>
             </children>
         </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</AnchorPane>
