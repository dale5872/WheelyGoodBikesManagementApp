<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="600.0" prefWidth="600.0" styleClass="main-background" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="App.FXControllers.LogInScreenController">
    <children>
        <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="600.0" prefWidth="600.0">
            <children>
                <Label alignment="CENTER" text="Wheely Good Bikes" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="50.0" />
                    </font>
                </Label>
                <TextField fx:id="usernameField" promptText="Username">
                    <VBox.margin>
                        <Insets bottom="10.0" left="100.0" right="100.0" top="20.0" />
                    </VBox.margin>
                    <padding>
                        <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
                    </padding>
                    <font>
                        <Font size="20.0" />
                    </font>
                </TextField>
                <PasswordField fx:id="passwordField" promptText="Password">
                    <VBox.margin>
                        <Insets left="100.0" right="100.0" top="10.0" />
                    </VBox.margin>
                    <padding>
                        <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
                    </padding>
                    <font>
                        <Font size="20.0" />
                    </font>
                </PasswordField>
                <Button mnemonicParsing="false" onAction="#login" prefWidth="150.0" styleClass="green-button" text="Log In">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>
            <Label fx:id="incorrectCredentials" text="The username or password is incorrect" textAlignment="CENTER" textFill="#ff7a00" visible="false">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="-45.0" top="20.0" />
               </VBox.margin>
            </Label>
            </children>
        </VBox>
    </children>
    <stylesheets>
        <URL value="@stylesheet.css" />
    </stylesheets>
</AnchorPane>
